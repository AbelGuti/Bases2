doctype html
html
	head
		title= title
		//meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(name='viewport', content='width=device-width,', initial-scale='1')
		link(rel='stylesheet', href='/stylesheets/bootstrap-3.3.5-dist/css/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap-3.3.5-dist/css/select2-bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap-3.3.5-dist/css/select2.css')
	
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='http://getbootstrap.com/examples/theme/#',style="padding:22px;") Buscatodo
				#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav
						li
							a(href='http://getbootstrap.com/examples/theme/#',style="padding:22px;") Conocenos

		div.container
			br
			br
			br
			br
			.container
				
				.row
					.col-sm-6(style='background-color:lavender;')
						h1(align='center')
							|#{title}
						section.loginform.cf
							form(name='login', action='/login', method='POST', accept-charset='utf-8')
							
								if error																			
									.alert.alert-danger(role='alert')
										strong #{error}						
								label(for='c_user') Usuario
								input.form-control(type='text', name='c_user', placeholder='usuario')
								br
								label(for='password') Contrase単a
								input.form-control(type='password', name='password', placeholder='contrase単a')
								div(align="right")
									.row(style="width:70%" )
										.col-sm-6
											div(style='padding:5px')
											input.btn.btn-primary(type='submit', value='Ingresar')
										.col-sm-6
											div(style='padding:5px')
											input.btn.btn-primary(type='submit', value='Recuperar Contrase単a')

					.col-sm-6(style='background-color:lavenderblush;')
						h1(align='center') Registrate!						
						form(name='FormRegistrar', action='/login/registrar', method='POST', accept-charset='utf-8')
							table
								tr
									td(align='right' style='width:20%')
										label(for='nombre',style='padding:10px') Nombre:
									td
										input.form-control(type='text', name='nombre')
								tr
									td(align='right')
										label(for='Correo',style='padding:10px') Correo:
									td
										input.form-control(type='text', name='Correo')
								tr
									td(align='right')
										label(for='NombreUsuario',style='padding:10px') Usuario:
									td
										input.form-control(type='text', name='NombreUsuario')
								tr
									td(align='right')
										label(for='Contrasenia',style='padding:10px') Contrase単a:
									td
										input.form-control(type='password', name='Contrasenia')
							table
								tr
									td(style='width:19%', align='right')
										label(for='Telefono',style='padding:10px') Telefono:
									td(style='width:25%')
										input.form-control(type='text', name='Telefono')
									td(align='left', style='width:10%')
										label(for='Telefono',style='padding:10px') Genero:
									td(align='left',style='width:25%')
										.form-group(style='padding:5px')
											select.form-control(name='genero')
												option(value='0') Femenino
												option(value='1') Masculino
									td

								tr
									td(style='width:10%',align='right')
										label(for='FechaNacimiento',style='padding:10px') Fecha de nacimiento:
									td(style='width:12%',align='left')
										div(class='6u$')
											.2u(class='2u$(xsmall)')
												input.form-control(type='date', name='FechaNacimiento')
							div(style='padding:5px',align='center')
								input.btn.btn-primary(type='submit', value='Registrarme',style='background-color:#FA5858')
				.container(align='right')
					div(style="width:51%",align='center')
						if error2
							.alert.alert-danger(role='alert')
								strong #{error2}
						if exito2
							.alert.alert-success(role='alert')
								strong #{exito2}			
	
		
		script(src='/stylesheets/bootstrap-3.3.5-dist/js/jquery.min.js')
		script(src='/stylesheets/bootstrap-3.3.5-dist/js/bootstrap.min.js')
